<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import com.jfoenix.controls.JFXListView?>

<BorderPane fx:id="root" prefHeight="480.0" prefWidth="640.0"
	styleClass="background" stylesheets="@../css/styles.css"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<BorderPane BorderPane.alignment="CENTER">
			<right>
				<HBox alignment="CENTER_RIGHT" prefWidth="100.0" spacing="5.0"
					BorderPane.alignment="CENTER">
					<children>
						<JFXButton fx:id="runButton"
							contentDisplay="GRAPHIC_ONLY" onAction="#onRunAction"
							ripplerFill="#92a897">
							<tooltip>
								<Tooltip text="Execute test" />
							</tooltip>
							<graphic>
								<FontAwesomeIconView fill="#635c67"
									glyphName="PLAY" size="24" />
							</graphic>
						</JFXButton>
						<JFXButton fx:id="pauseButton"
							contentDisplay="GRAPHIC_ONLY" onAction="#onPauseAction"
							ripplerFill="#92a897">
							<tooltip>
								<Tooltip text="Pause execution" />
							</tooltip>
							<graphic>
								<FontAwesomeIconView fill="#635c67"
									glyphName="PAUSE" size="24" />
							</graphic>
						</JFXButton>
					</children>
				</HBox>
			</right>
			<left>
				<HBox prefWidth="100.0" BorderPane.alignment="CENTER">
					<children>
						<JFXButton fx:id="backButton"
							contentDisplay="GRAPHIC_ONLY" onAction="#onBackAction"
							ripplerFill="#92a897">
							<tooltip>
								<Tooltip text="Back" />
							</tooltip>
							<graphic>
								<FontAwesomeIconView fill="#635c67"
									glyphName="ARROW_LEFT" size="24" />
							</graphic>
						</JFXButton>
					</children>
				</HBox>
			</left>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
			<center>
				<Label fx:id="testNameLabel" text="&lt;Test name&gt;"
					BorderPane.alignment="CENTER" />
			</center>
		</BorderPane>
	</top>
	<center>
		<SplitPane dividerPositions="0.25" styleClass="transparent">
			<items>
				<BorderPane>
					<center>
						<JFXListView fx:id="casesList" prefHeight="200.0"
							prefWidth="200.0" styleClass="transparent" />
					</center>
					<top>
						<HBox alignment="BOTTOM_LEFT" prefHeight="41.0"
							styleClass="cases-header" BorderPane.alignment="CENTER">
							<children>
								<Label styleClass="cases-label" text="Cases">
									<HBox.margin>
										<Insets bottom="5.0" left="10.0" />
									</HBox.margin>
								</Label>
							</children>
						</HBox>
					</top>
				</BorderPane>
				<BorderPane fx:id="casePane" />
			</items>
		</SplitPane>
	</center>
</BorderPane>
