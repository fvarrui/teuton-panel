<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="480.0" prefWidth="640.0"
	styleClass="background" stylesheets="@../css/styles.css"
	xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<center>
				<VBox alignment="CENTER" fillWidth="false" spacing="20.0"
					BorderPane.alignment="CENTER">
					<children>
						<Label styleClass="title-label" text="Select mode" />
						<VBox spacing="15.0" VBox.vgrow="NEVER">
							<children>
								<JFXButton alignment="BASELINE_LEFT"
									maxWidth="1.7976931348623157E308"
									onAction="#onClassroomModeButtonAction" styleClass="modeButton"
									text="Classroom">
									<graphic>
										<FontAwesomeIconView
											fx:id="classroomModeIcon" styleClass="modeIcon" />
									</graphic>
								</JFXButton>
								<JFXButton alignment="BASELINE_LEFT" layoutX="15.0"
									layoutY="15.0" maxWidth="1.7976931348623157E308"
									onAction="#onContestModeButtonAction" styleClass="modeButton"
									text="Contest">
									<graphic>
										<FontAwesomeIconView
											fx:id="contestModeIcon" styleClass="modeIcon" />
									</graphic>
								</JFXButton>
								<JFXButton alignment="BASELINE_LEFT" layoutX="15.0"
									layoutY="52.0" maxWidth="1.7976931348623157E308"
									onAction="#onStandaloneModeButtonAction"
									styleClass="modeButton" text="Stand-alone">
									<graphic>
										<FontAwesomeIconView
											fx:id="standaloneModeIcon" styleClass="modeIcon" />
									</graphic>
								</JFXButton>
							</children>
							<padding>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</padding>
						</VBox>
					</children>
				</VBox>
			</center>
			<bottom>
				<HBox alignment="CENTER" BorderPane.alignment="CENTER">
					<children>
						<Label text="Teuton Panel: A graphical front-end for" />
						<Hyperlink onAction="#onTeutonLinkAction" text="TEUTON" />
					</children>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</HBox>
			</bottom>
		</BorderPane>
		<HBox alignment="TOP_RIGHT" AnchorPane.rightAnchor="5.0"
			AnchorPane.topAnchor="5.0">
			<children>
				<JFXButton fx:id="settingsButton"
					contentDisplay="GRAPHIC_ONLY" defaultButton="true"
					onAction="#onSettingsAction" ripplerFill="BLACK">
					<tooltip>
						<Tooltip text="Settings" />
					</tooltip>
					<graphic>
						<FontAwesomeIconView fx:id="settingsIcon" />
					</graphic>
				</JFXButton>
			</children>
		</HBox>

	</children>
</AnchorPane>
