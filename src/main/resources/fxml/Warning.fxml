<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root fx:id="root" alignment="CENTER" spacing="5.0" style="-fx-background-color: gray;" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<FontIcon iconColor="orange" iconLiteral="fas-exclamation-triangle" iconSize="64">
         <effect>
            <DropShadow offsetX="2.0" offsetY="3.0" />
         </effect></FontIcon>
		<Label fx:id="messageLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="&lt;message&gt;" />
	</children>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</fx:root>
